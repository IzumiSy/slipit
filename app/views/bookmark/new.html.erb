<%= form_for(@bookmark, url: '/bookmark/new', html: { class: 'ui form' }) do |f| %>
  <div class="field">

  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, required: true, autocomplete: 'off' %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description, required: true, autocomplete: 'off' %>
  </div>

  <div class="field">
    <%= f.submit 'Submit', class: 'ui primary button' %>
    <%= link_to 'Cancel', { controller: 'bookmark', action: 'index' }, { class: 'ui button' } %>
  </div>
<% end %>
