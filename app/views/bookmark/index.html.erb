<h2 class="ui dividing header title">
  Bookmarks
</h2>

<%=
  link_to 'Add a bookmark',
  { controller: 'bookmark', action: 'new' },
  { class: "positive ui right floated button" }
%>

<%= form_tag({ controller: 'bookmark', action: 'search'}, { method: 'get' }) do %>
  <div class="ui icon input">
    <%= text_field_tag :search %>
    <i class="search icon"></i>
  </div>
<% end %>

<% if @bookmarks.length > 0 then %>
  <div class="ui cards">
    <%= render partial: "card", locals: {
      header: "All over the world",
      meta: "2 days ago",
      description: "Hello world guys",
      extra: "testament"
    } %>
  </div>
<% else %>
  <%= render partial: "nobookmark" %>
<% end %>

