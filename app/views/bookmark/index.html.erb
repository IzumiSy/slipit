<h2 class="ui dividing header title">
  Bookmarks
</h2>

<%=
  link_to 'Add a bookmark',
  { controller: 'bookmark', action: 'new' },
  { class: "positive ui right floated small button" }
%>

<%= form_tag({ controller: 'bookmark', action: 'search'}, { method: 'get' }) do %>
  <div class="ui icon small input">
    <%= text_field_tag :search %>
    <i class="search icon"></i>
  </div>
<% end %>

<% if @bookmarks.length > 0 then %>
  <div class="ui cards">
    <%= render "bookmark/shared/card", header: "All over the world",
      meta: "2 days ago", description: "Hello world guys", extra: "testament" %>
  </div>
<% else %>
  <div class="ui cube shape nobookmark-placeholder">
    <div class="sides">
      <div class="active side">
        <div class="content">
          <div class="center">
            Looks like nothing here :(
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

