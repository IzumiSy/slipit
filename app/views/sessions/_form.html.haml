- if notice
  .ui.warning.message
    .header
      = simple_format notice, {}, wrapper_tag: 'div'

= form_for :session, url: session_path, html: { class: "ui large form" } do |f|
  .ui.stacked.segment
    .ui.field
      .ui.left.icon.input
        %i.user.icon
        = f.text_field :email, type: 'email', placeholder: "E-mail"
    .ui.field
      .ui.left.icon.input
        %i.lock.icon
        = f.password_field :password, placeholder: "Password"
    = f.submit "Login", class: "ui fluid large teal submit button"
